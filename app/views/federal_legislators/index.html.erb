<p id="notice"><%= notice %></p>

<h1>Listing Federal Legislators</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Legislator enters office on</th>
      <th>Legislator leaves office on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @federal_legislators.each do |federal_legislator| %>
      <tr>
        <td><%= federal_legislator.first_name %></td>
        <td><%= federal_legislator.last_name %></td>
        <td><%= federal_legislator.legislator_enters_office_on %></td>
        <td><%= federal_legislator.legislator_leaves_office_on %></td>
        <td><%= link_to 'Show', federal_legislator %></td>
        <td><%= link_to 'Edit', edit_federal_legislator_path(federal_legislator) %></td>
        <td><%= link_to 'Destroy', federal_legislator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

