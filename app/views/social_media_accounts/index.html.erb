<p id="notice"><%= notice %></p>

<h1>Listing Social Media Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Media type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @social_media_accounts.each do |social_media_account| %>
      <tr>
        <td><%= social_media_account.name %></td>
        <td><%= social_media_account.url %></td>
        <td><%= social_media_account.media_type %></td>
        <td><%= link_to 'Show', social_media_account %></td>
        <td><%= link_to 'Edit', edit_social_media_account_path(social_media_account) %></td>
        <td><%= link_to 'Destroy', social_media_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

